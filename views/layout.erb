<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <link href='http://fonts.googleapis.com/css?family=Ubuntu:400,700' rel='stylesheet' type='text/css'>
  <link href="css/spraypaint.css" rel="stylesheet" type="text/css">
  <link href="css/custom.css" rel="stylesheet" type="text/css">
  <link rel="stylesheet" href="/css/code_formatter.css">
</head>

<body>

  <header>
  <%=  erb :_nav %>
  </header>

<% if flash.any? %>
  <% if flash[:notice] %>
    <div class="row">
      <div class="col-6">
        <div data-alert class="alert info">
            <%= flash[:notice] %>
        </div>
      </div>
    </div>
  <% elsif flash[:negative] %>
    <div class="row">
      <div class="col-6">
        <div data-alert class="alert danger">
            <%= flash[:negative] %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="row">
      <div class="col-6">
        <div data-alert class="alert success">
            <%= flash[:success] %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

  <section>
    <%= yield %>
  </section>

  <!-- <footer> -->
  <!-- </footer> -->

</body>
</html>
